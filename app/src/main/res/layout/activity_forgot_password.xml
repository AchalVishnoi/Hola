<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Forgot_Password"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="centerCrop"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            tools:context=".SignIn">


            <ImageView
                android:layout_width="279dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:padding="25dp"
                android:src="@drawable/bg1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donâ€™t worry it happens. Please enter the E-mail address associated with your account"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                android:layout_marginBottom="50dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgotEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    />


                <TextView
                    android:id="@+id/doseNotExistAlert"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user with the email not exist"
                    android:textColor="@color/red"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/GetOTPButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_16ssp"
                android:background="@drawable/button_background"
                android:text="Get OTP"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
